<?xml version="1.0" encoding="utf-8"?>
    <android.support.v7.widget.CardView
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/cardview_cell_questiontagrv"
        xmlns:android="http://schemas.android.com/apk/res/android"
        app:cardBackgroundColor="?attr/cardview_bgcolor"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:background="?attr/default_containter_bgcolor"
            >

            <com.xguokr.view.RoundedImageView
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:id="@+id/imageview_cell_questiontagrv"
                android:src="@drawable/default_pic_48dp"
                android:layout_margin="8dp"
                app:riv_border_width="0dp"
                app:riv_corner_radius="1dp"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_margin="8dp"
                android:background="?attr/default_containter_bgcolor"
                >

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:background="?attr/default_containter_bgcolor"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="20dp"
                        android:layout_height="wrap_content"
                        android:id="@+id/textview_index_cell_questiontag"
                        android:textColor="?attr/default_summery_textcolor"
                        android:background="?attr/default_containter_bgcolor"
                        android:textSize="20sp"
                        android:layout_alignParentLeft="true"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/textview_tagname_cell_questiontagrv"
                        android:textSize="20sp"
                        android:textColor="?attr/default_obvious_textcolor"
                        android:background="?attr/default_containter_bgcolor"
                        android:layout_toRightOf="@+id/textview_index_cell_questiontag"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/textview_tagnum_cell_questiontagrv"
                        android:textColor="?attr/default_summery_textcolor"
                        android:background="?attr/default_containter_bgcolor"
                        android:layout_alignParentRight="true"
                        />
                </RelativeLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/textview_tagdesc_cell_questiontagrv"
                    android:maxLines="2"
                    android:ellipsize="end"
                    android:textColor="?attr/default_summery_textcolor"
                    android:background="?attr/default_containter_bgcolor"
                    />

            </LinearLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>

<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:background="?attr/default_containter_bgcolor">

    <android.support.v7.widget.CardView
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/cardview_articlelistitem"
        app:cardBackgroundColor="?attr/cardview_bgcolor"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="?attr/default_containter_bgcolor"
            android:orientation="vertical">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="2dp"
                android:layout_marginRight="2dp"
                android:id="@+id/image_articlelistitem"
                />

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_marginTop="@dimen/defalt_view_margin_size"
                android:layout_marginBottom="@dimen/defalt_view_margin_size"
                android:layout_marginLeft="2dp"
                android:layout_marginRight="2dp"
                android:background="?attr/divide_line_color"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textColor="?attr/default_obvious_textcolor"
                android:layout_gravity="center"
                android:padding="0dp"
                android:layout_marginBottom="2dp"
                android:layout_marginLeft="2dp"
                android:layout_marginRight="2dp"
                android:layout_marginTop="0dp"
                android:id="@+id/textview_articlelistitem"/>
        </LinearLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>

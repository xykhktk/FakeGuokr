<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="100dp" android:layout_height="match_parent"
    android:layout_gravity="center_horizontal"
    android:background="?attr/default_containter_bgcolor"
    app:cardBackgroundColor="?attr/cardview_bgcolor"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="?attr/default_containter_bgcolor"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?attr/default_containter_bgcolor"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textview_index_cell_grouptag"
                android:textColor="?attr/default_summery_textcolor"
                android:textSize="14sp"
                android:background="?attr/default_containter_bgcolor"
                android:layout_margin="@dimen/grouptagfragment_view_margin_size"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textview_groupname_cell_grouptag"
                android:textColor="?attr/default_obvious_textcolor"
                android:background="?attr/default_containter_bgcolor"
                android:textSize="14sp"
                android:singleLine="true"
                android:ellipsize="end"
                android:layout_margin="@dimen/grouptagfragment_view_margin_size"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="?attr/default_containter_bgcolor"
            android:gravity="center_horizontal">

            <com.xguokr.view.RoundedImageView
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                app:riv_border_width="0dp"
                app:riv_corner_radius="2dp"
                android:id="@+id/imageview_cell_grouptag"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textview_members_cell_grouptag"
                android:textColor="?attr/default_summery_textcolor"
                android:background="?attr/default_containter_bgcolor"
                android:textSize="12sp"
                />

        </LinearLayout>

    </LinearLayout>
</android.support.v7.widget.CardView>

